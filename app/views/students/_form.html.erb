<%= simple_form_for @student, defaults: { input_html: { class: 'mdl-textfield mdl-js-textfield mdl-textfield--floating-label' } } do |f| %>
  <%= f.input :first_name, input_html: { class: 'mdl-textfield__input mdl-textfield__input' } %>
  <%= f.input :last_name, input_html: { class: 'mdl-textfield__input' } %>
  <%= f.association :teacher, input_html: { class: 'mdl-textfield__input' } %>
  <%= f.button :submit, input_html: { class: 'mdl-button mdl-button--raised' } %>
<% end %>
