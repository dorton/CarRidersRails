<div class="container">
  <div id="login" class="signin-card">
    <div class="logo-image">
      <%= image_tag("icons.svg", alt: "Logo", title: "Logo", width: "138") %>
    </div>
    <h1 class="display1">CarRiders</h1>
    <p class="subhead">
      Forgot your password?
    </p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <form>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, class: "mdl-textfield__label" %>
    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "mdl-button mdl-js-button mdl-button--raised" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</form>
