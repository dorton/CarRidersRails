<!DOCTYPE html>
<html>
<head>
  <title>CarRidersRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
  <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-color--grey-100">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <button class="mdl-button mdl-button--icon"><%= link_to(image_tag('icons.svg', class: 'svg-white'), root_path) %></button>
        <span><%= link_to('CarRiders', root_path, class: "mdl-layout-title mdl-navigation__link") %></span>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation. We hide it in small screens. -->
        <nav class="mdl-navigation mdl-layout--large-screen-only ">
          <% if user_signed_in? %>
          <% end %>

          <% if user_signed_in? %>

            <% if current_user.admin? %>
              <%= link_to('Current Pickups', current_pickups_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('Admin', rails_admin_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('My Account', edit_user_path(current_user), class: "mdl-navigation__link") %>
            <% end %>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "mdl-navigation__link" ) %>
          <% end %>
        </nav>
      </div>
    </header>
    <% if user_signed_in? %>
    <div class="mdl-layout__drawer mdl-layout--small-screen-only">
        <span class="mdl-layout-title">CarRiders</span>
        <nav class="mdl-navigation">
          <% if user_signed_in? %>
          <% end %>

          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <%= link_to('All Parents', users_path, class: "mdl-navigation__link") %>
            <% end %>

            <% if current_user.admin? %>
              <%= link_to('Current Pickups', current_pickups_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('Admin', rails_admin_path, class: "mdl-navigation__link") %>
            <% end %>
            <%= link_to('My Account', edit_user_path(current_user), class: "mdl-navigation__link") %>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "mdl-navigation__link" ) %>
          <% end %>
        </nav>
      </div>
<% end %>




    <main class="mdl-layout__content">
      <%= yield %>
    </main>



  </div>


</body>
</html>
